def find_median(lst):
    sorted_lst=sorted(lst)
    n=len(sorted_lst)
    if n%2==1:
        median=sorted_lst[n//2]
    else:
        median=(sorted_lst[n//2-1]+sorted_lst[n//2])/2
    return median
list=[3,1,7,5,4]
print("Original list:",list)
median_value=find_median(list)
print("Median:",median_value)

